<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body>

    <div class="container">
        <h1>Sign Up</h1>
        <h2 class=alertMessage><%- include('partials/error')%></h2>
        <form action="/user/new" method="POST">
            <label>First Name</label>
            <input type="text" name="firstName" id="firstName" required value="<%= typeof firstName != 'undefined' ? firstName : '' %>" >
            <label>Last Name</label>
            <input type="text" name="lastName" id="lastName" required value="<%= typeof lastName != 'undefined' ? lastName : '' %>" >
            <label>Email</label>
            <input type="email" name="email" id="email" required value="<%= typeof email != 'undefined' ? email : '' %>" >
            <label>Username</label>
            <input type="text" name="username" id="username" required value="<%= typeof username != 'undefined' ? username : '' %>" >
            <label>Password</label>
            <input type="password" name="password" id="password" required>
            <label>Confirm Password</label>
            <input type="password" name="password2" id="password2" required>
            <button type="submit">Sign Up</button>
        </form>
        <p>Already have an account?<a href="/login">Log in</a></p>
    </div>

